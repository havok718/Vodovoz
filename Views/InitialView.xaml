<UserControl x:Class="Vodovoz.Views.InitialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vodovoz.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Заказы" Margin="10" Command="{Binding OrdersCommand}" />

        <Button Content="Подразделения" Margin="10" Command="{Binding DepartmentsCommand}" />

        <Button Content="Сотрудники" Margin="10" Command="{Binding StaffCommand}" />

        <Button Content="Товары" Margin="10" Command="{Binding ProductsCommand}" />
    </StackPanel>
</UserControl>
